<% layout('layout/layout.ejs') %>
<% block('stylesheets', '<link rel="stylesheet" href="/css/loginRegistro.css">') -%>

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 85vh;">
        <!-- Formulario -->
        <div class="col-md-6 col-lg-5">
            <div class="card login-card">
                <div class="card-header login-header">
                    <h4>Crear cuenta para reservar</h4>
                </div>
                <div class="card-body">
                    <form action="/registro" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="email">Correo del huésped</label>
                            <input class="form-control" type="email" name="email" placeholder="example@gmail.com" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Contraseña</label>
                            <input class="form-control" type="password" name="password" placeholder="password" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-registrar" type="submit">Crear cuenta</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Mensaje de Bienvenida -->
        <div class="col-md-6 col-lg-5 text-center d-flex flex-column justify-content-center align-items-center p-4">
            <h2 class="bienvenida-titulo mb-4">¡Bienvenido a Villa Paraíso!</h2>
            <p class="bienvenida-texto">
                Disfruta de la experiencia de hospedarte con nosotros. Crea tu cuenta para comenzar a reservar
                estancias inolvidables en nuestras instalaciones. Te esperamos con calidez y comodidad.
            </p>
        </div>
    </div>
</div>