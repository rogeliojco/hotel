<% layout('layout/layout.ejs')%>

<div class="row justify-content-center align-items-center" style="min-height: 80vh;"> <!-- Centrado vertical y horizontal -->
    <div class="col-md-6 col-lg-5">
        <div class="card login-card">
            <div class="card-header login-header">
                <h4>Registrar</h4>
            </div>
            <div class="card-body">
                <form action="/registro" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="email">Correo Electrónico</label>
                        <input class="form-control" type="email" name="email" placeholder="example@gmail.com" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Contraseña</label>
                        <input class="form-control" type="password" name="password" placeholder="password" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-registrar" type="submit">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-5 text-center">  <!-- Columna para el texto -->
        <img src="asset/T1.svg"  alt="Logo" height="65" style="margin-bottom: 30px;">
        <img src="asset/T2.svg" alt="Logo" height="31">
    </div>
</div>