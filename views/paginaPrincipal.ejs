      <!-- Logo/Texto -->
      <div class="col-md-4 mb-3 mb-md-0 text-center text-md-start">
        <span class="fw-light">HOTELES</span> <span class="fw-bold" style="color: #d9534f;">PREMIUM</span>
      </div>
      
      <!-- Número de contacto destacado -->
      <div class="col-md-4 text-center">
        <a href="tel:+524433108137" class="contact-number">
          <i class="fas fa-phone-alt me-2"></i>
          <span>+52 443 310 8137</span>
        </a>
      </div>
      
      <!-- Redes sociales -->
      <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
