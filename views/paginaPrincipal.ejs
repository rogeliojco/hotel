          <div class="benefit-icon mb-3">
            <i class="fas fa-calendar-alt fa-3x text-danger"></i>
          </div>
          <h4 class="text-uppercase">Cancelaciones flexibles</h4>
          <p class="small">Cambia tus planes sin preocupaciones</p>
        </div>
      </div>
      
      <!-- Beneficio 2 -->
      <div class="col-md-3 col-6 mb-4">
        <div class="benefit-card p-4 h-100">
          <div class="benefit-icon mb-3">
            <i class="fas fa-credit-card fa-3x text-danger"></i>
          </div>
          <h4 class="text-uppercase">Meses sin intereses</h4>
          <p class="small">Disfruta de facilidades de pago</p>
        </div>
      </div>
      
      <!-- Beneficio 3 -->
      <div class="col-md-3 col-6 mb-4">
        <div class="benefit-card p-4 h-100">
          <div class="benefit-icon mb-3">
            <i class="fas fa-percentage fa-3x text-danger"></i>
          </div>
          <h4 class="text-uppercase">Ofertas exclusivas</h4>
          <p class="small">Descuentos especiales para clientes frecuentes</p>
        </div>
      </div>
      
      <!-- Beneficio 4 -->
      <div class="col-md-3 col-6 mb-4">
        <div class="benefit-card p-4 h-100">
          <div class="benefit-icon mb-3">
            <i class="fas fa-wifi fa-3x text-danger"></i>
          </div>
          <h4 class="text-uppercase">Cheking Digital</h4>
          <p class="small">Conexión de alta velocidad gratuita</p>
        </div>
      </div>
      
    </div>
  </div>
</section>