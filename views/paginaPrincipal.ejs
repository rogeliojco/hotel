    <!-- Línea divisoria y copyright -->
    <div class="border-top border-secondary mt-3 pt-3 text-center">
      <p class="small mb-0 text-muted">
        &copy; <span id="current-year"></span> Hoteles Premium. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>

