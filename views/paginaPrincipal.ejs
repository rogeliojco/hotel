<% layout('layout/layout.ejs') %>

<link rel="stylesheet" href="/css/loginRegistro.css">


<!-- Imagen de fondo a pantalla completa -->
<div class="hero-image position-relative">
  <!-- Contenedor encima de la imagen -->
  <div class="search-form-container position-absolute top-50 start-50 translate-middle w-100 px-3">
<form id="reservationForm" action="/reservar" method="POST">
    <div class="d-flex justify-content-center gap-2 flex-wrap">
      <input type="text" name="ciudad" class="form-control" placeholder="Ingresar ciudad / Hotel" style="max-width: 200px;" required>
      <input type="text" name="fechas" class="form-control" placeholder="13/05/25 – 14/05/25" style="max-width: 180px;" required>
      <input type="text" name="habitacion" class="form-control" placeholder="1 Habitación - 2 Personas" style="max-width: 220px;" required>
      <input type="text" name="codigo" class="form-control" placeholder="Código Promocional" style="max-width: 180px;">
      <button type="submit" class="btn btn-danger">RESERVAR</button>
    </div>
  </form>

  </div>
</div>
