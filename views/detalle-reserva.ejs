<% layout('layout/layout.ejs') %>

<div class="container my-5">
  <div class="card shadow border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h4 class="mb-0"><i class="fas fa-file-alt me-2"></i> Detalles de la Reservación</h4>
      <a href="/perfil" class="btn btn-outline-light btn-sm"><i class="fas fa-arrow-left me-1"></i> Volver</a>
    </div>
    <div class="card-body">
      <p><strong>Nombre del huésped:</strong> <%= reserva.nombre %></p>
      <p><strong>Ciudad:</strong> <%= reserva.ciudad %></p>
      <p><strong>Fechas:</strong> <%= reserva.fechas %></p>
      <p><strong>Habitación:</strong> <%= reserva.habitacion %></p>
      <p><strong>Código de reserva:</strong> <%= reserva.codigo %></p>
      <p><strong>Email:</strong> <%= reserva.email %></p>
      <p><strong>Teléfono:</strong> <%= reserva.telefono %></p>
      <p><strong>Estado:</strong>
        <% if (reserva.estado === 'pendiente') { %>
          <span class="badge bg-warning text-dark">Pendiente</span>
        <% } else if (reserva.estado === 'confirmada') { %>
          <span class="badge bg-success">Confirmada</span>
        <% } else if (reserva.estado === 'cancelada') { %>
          <span class="badge bg-danger">Cancelada</span>
        <% } %>
      </p>

      <% if (reserva.estado !== 'cancelada') { %>
        <form action="/reserva/<%= reserva._id %>/cancelar" method="POST" id="cancelar-form" class="mt-4">
          <button type="button" class="btn btn-outline-danger" onclick="confirmarCancelacion()">
            <i class="fas fa-ban me-1"></i> Cancelar Reservación
          </button>
        </form>
      <% } else { %>
        <p class="mt-3 text-muted">Esta reservación ya fue cancelada.</p>
      <% } %>
    </div>
  </div>
</div>

<script>
  function confirmarCancelacion() {
    if (confirm("¿Estás seguro de que deseas cancelar esta reservación? Esta acción no se puede deshacer.")) {
      document.getElementById("cancelar-form").submit();
    }
  }
</script>