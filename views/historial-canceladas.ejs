<% layout('layout/layout.ejs') %>

<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-header bg-secondary text-white">
      <h4 class="mb-0"><i class="fas fa-history me-2"></i> Historial de Reservaciones Canceladas</h4>
    </div>
    <div class="card-body">
      <% if (reservas.length > 0) { %>
        <% reservas.forEach(reserva => { %>
          <div class="card mb-3 border-danger">
            <div class="card-body">
              <h5 class="card-title"><i class="fas fa-bed me-2"></i> <%= reserva.habitacion %></h5>
              <p><i class="fas fa-calendar-alt me-2"></i> <%= reserva.fechas %></p>
              <p><i class="fas fa-map-marker-alt me-2"></i> <%= reserva.ciudad %></p>
              <p><strong>Cancelada el:</strong> <%= reserva.fechaReserva.toLocaleDateString('es-MX') %></p>
              <span class="badge bg-danger"><i class="fas fa-ban me-1"></i> Cancelada</span>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="alert alert-light text-center text-muted">
          <i class="fas fa-calendar-times fa-2x mb-2"></i>
          <p>No tienes reservaciones canceladas.</p>
        </div>
      <% } %>
    </div>
    <div class="card-footer text-end">
      <a href="/perfil" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-1"></i> Volver a perfil</a>
    </div>
  </div>
</div>