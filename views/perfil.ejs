<% layout('layout/layout.ejs') %>

<%
  const reservasActivas = user.reservas?.filter(r => r.estado !== 'cancelada') || [];
  const reservasCanceladas = user.reservas?.filter(r => r.estado === 'cancelada') || [];
%>

<div class="container mt-4">
  <!-- Bienvenida -->
  <div class="alert alert-info d-flex align-items-center" role="alert">
    <i class="fas fa-hand-sparkles me-2"></i>
    <div>
      Bienvenid<%= user.name && user.name.slice(-1) === 'a' ? 'a' : 'o' %>, <strong><%= user.name || 'usuario' %></strong> 游녦
    </div>
  </div>

  <!-- Datos del usuario -->
  <div class="card bg-light mb-4">
    <div class="card-body d-flex align-items-center flex-wrap justify-content-between">
      <div>
        <h4><i class="fas fa-user"></i> <%= user.name || 'Nombre no registrado' %></h4>
        <p>Email: <%= user.email %></p>
        <p>ID: <%= user._id %></p>
      </div>
      <form class="d-flex gap-2 mt-3 mt-md-0" action="/perfil/editar" method="POST">
        <input type="text" name="name" value="<%= user.name %>" class="form-control" required>
        <button class="btn btn-outline-primary">Guardar cambios</button>
      </form>
    </div>
  </div>

  <!-- Bot칩n para hacer nueva reservaci칩n -->
  <div class="mb-3 text-end">
    <a href="/reservar" class="btn btn-outline-success btn-sm">
      <i class="fas fa-hotel me-1"></i> Reservar ahora
    </a>
  </div>

  <!-- Tabs de Reservaciones -->
  <h5 class="text-light mb-3">Mis Reservaciones</h5>

  <div class="btn-group mb-3" role="group">
    <button id="btn-activas" class="btn btn-outline-primary btn-sm" onclick="mostrarReservas('activas')">
      Activas (<%= reservasActivas.length %>)
    </button>
    <button id="btn-canceladas" class="btn btn-outline-danger btn-sm" onclick="mostrarReservas('canceladas')">
      Canceladas (<%= reservasCanceladas.length %>)
    </button>
    <a href="/historial-canceladas" class="btn btn-outline-secondary btn-sm">
      Historial Completo
    </a>
  </div>

  <!-- Reservas activas -->
  <div id="reservas-activas">
    <% if (reservasActivas.length > 0) { %>
      <% reservasActivas.forEach(reserva => { %>
        <div class="card card-reserva mb-3">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-bed me-2"></i> <%= reserva.habitacion %></h5>
            <p><i class="fas fa-calendar-alt me-2"></i> <%= reserva.fechas %></p>
            <p><i class="fas fa-map-marker-alt me-2"></i> <%= reserva.ciudad %></p>
            <p class="estado text-success"><i class="fas fa-check-circle me-1"></i> Estado: <%= reserva.estado %></p>
            <a href="/reserva/<%= reserva._id %>" class="btn btn-outline-dark btn-sm">Ver detalles</a>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="card mb-3 shadow-sm border-0" style="background-color: #f8f9fa;">
        <div class="card-body text-center text-muted">
          <i class="fas fa-calendar-times fa-2x mb-2 text-secondary"></i>
          <p class="mb-2">No tienes reservaciones activas.</p>
          <a href="/reservar" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-hotel me-1"></i> Reservar ahora
          </a>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Reservas canceladas -->
  <div id="reservas-canceladas" style="display: none;">
    <% if (reservasCanceladas.length > 0) { %>
      <% reservasCanceladas.forEach(reserva => { %>
        <div class="card card-reserva cancelada mb-3">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-bed me-2"></i> <%= reserva.habitacion %></h5>
            <p><i class="fas fa-calendar-alt me-2"></i> <%= reserva.fechas %></p>
            <p><i class="fas fa-map-marker-alt me-2"></i> <%= reserva.ciudad %></p>
            <p class="estado text-danger"><i class="fas fa-ban me-1"></i> Estado: <%= reserva.estado %></p>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="card mb-3 shadow-sm border-0" style="background-color: #f8f9fa;">
        <div class="card-body text-center text-muted">
          <i class="fas fa-ban fa-2x mb-2 text-danger"></i>
          <p class="mb-2">No tienes reservaciones canceladas.</p>
          <a href="/" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Ir al inicio
          </a>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Cambiar contrase침a -->
  <div class="card mt-5">
    <div class="card-header bg-warning text-dark">Cambiar Contrase침a</div>
    <div class="card-body">
      <form action="/perfil/cambiar-password" method="POST">
        <div class="mb-3">
          <label>Contrase침a actual</label>
          <input type="password" name="currentPassword" class="form-control" required>
        </div>
        <div class="mb-3">
          <label>Nueva contrase침a</label>
          <input type="password" name="newPassword" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-dark">Actualizar contrase침a</button>
      </form>
    </div>
  </div>
</div>

<!-- Script para alternar entre activas y canceladas -->
<script>
  function mostrarReservas(tipo) {
    document.getElementById('reservas-activas').style.display = tipo === 'activas' ? 'block' : 'none';
    document.getElementById('reservas-canceladas').style.display = tipo === 'canceladas' ? 'block' : 'none';

    document.getElementById('btn-activas').classList.remove('btn-primary');
    document.getElementById('btn-canceladas').classList.remove('btn-danger');

    if (tipo === 'activas') {
      document.getElementById('btn-activas').classList.add('btn-primary');
    } else {
      document.getElementById('btn-canceladas').classList.add('btn-danger');
    }
  }

  mostrarReservas('activas');
</script>