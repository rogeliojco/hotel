<% layout('layout/layout.ejs') %>
<link rel="stylesheet" href="/css/perfil.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Hero -->
<section class="perfil-hero d-flex flex-column align-items-center justify-content-center text-white text-center">
  <h1 class="fw-semibold mb-4">Bienvenido, <%= user.name %></h1>
  <div class="bg-white text-dark p-4 rounded-4 shadow d-flex flex-column flex-md-row align-items-center gap-3 w-100" style="max-width: 900px;">
    <div class="d-flex align-items-center gap-3 flex-grow-1">
      <img src="/images/avatar-generico.png" alt="Avatar" class="perfil-avatar-img">
      <div>
        <h5 class="mb-1 fw-bold"><%= user.name %> <span class="badge-miembro">Miembro</span></h5>
        <p class="mb-0 text-muted small"><%= user.email %></p>
        <small class="text-muted"><i class="bi bi-shield-lock"></i> Último acceso: <%= new Date().toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit' }) %></small>
      </div>
    </div>
    <div class="d-flex flex-column flex-md-row gap-2">
      <a href="/reservar" class="btn btn-primary">Reservar ahora</a>
      <button id="btnActualizar" class="btn btn-outline-dark">Editar perfil</button>
    </div>
  </div>
</section>

<!-- Contenido principal -->
<section class="container perfil-container mt-n5">
  <!-- Contadores -->
  <div class="row text-center mb-5">
    <div class="col-6 col-md-3">
      <div class="card p-3 border-0 shadow-sm">
        <h3 class="text-primary mb-1"><%= reservasActivas.length %></h3>
        <p class="mb-0 text-muted small">Reservaciones activas</p>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card p-3 border-0 shadow-sm">
        <h3 class="text-primary mb-1"><%= reseñas.length %></h3>
        <p class="mb-0 text-muted small">Reseñas</p>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card p-3 border-0 shadow-sm">
        <h3 class="text-primary mb-1"><%= reservasCanceladas.length %></h3>
        <p class="mb-0 text-muted small">Canceladas</p>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card p-3 border-0 shadow-sm">
        <p class="text-muted mb-1">Miembro desde</p>
        <strong><%= user.fechaRegistro ? new Date(user.fechaRegistro).toLocaleDateString('es-MX', { year: 'numeric', month: 'long' }) : 'N/D' %></strong>
      </div>
    </div>
  </div>

  <!-- Módulo: Tu nivel -->
  <div class="card-section nivel-usuario mb-4 text-white position-relative overflow-hidden">
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient rounded-3" style="z-index: 0; background: linear-gradient(135deg, #6b4edb, #947ee8); opacity: 0.9;"></div>
    <div class="position-relative z-1 d-flex flex-column flex-md-row align-items-center gap-4">
      <i class="bi bi-gem fs-1 text-warning bg-white bg-opacity-25 p-3 rounded-circle shadow-sm"></i>
      <div class="flex-grow-1 text-start">
        <h5 class="mb-1">Tu nivel actual</h5>
        <p class="mb-2">¡Felicidades <%= user.name %>! Eres <strong>Miembro Platino</strong></p>
        <div class="progress" role="progressbar" aria-label="Progreso de nivel" style="height: 12px;">
          <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" style="width: 70%"></div>
        </div>
        <small class="text-white-50">70% para alcanzar nivel Diamante</small>
      </div>
      <button class="btn btn-light text-dark fw-semibold">Ver beneficios</button>
    </div>
  </div>


  <!-- Módulo: Cambiar avatar -->
<div id="moduloAvatar" class="card-section mb-4" style="display: none;">
  <h5 class="section-title">Cambiar avatar</h5>
  <form class="avatar-change-form" method="POST" action="/cambiar-avatar" enctype="multipart/form-data">
    <label for="avatarFile">Selecciona una imagen</label>
    <input type="file" class="form-control mt-2" id="avatarFile" name="avatar">
    <button type="submit" class="btn btn-outline-primary mt-3">Actualizar Avatar</button>
  </form>
</div>


  <!-- Formulario de actualización -->
  <div id="formActualizar" class="card-section mb-4" style="display: none;">
    <h5 class="section-title">Actualizar datos</h5>
    <form action="/actualizar-perfil" method="POST">
      <div class="mb-3">
        <label for="nuevoUsuario" class="form-label">Nuevo nombre</label>
        <input type="text" class="form-control" name="nuevoUsuario" id="nuevoUsuario">
      </div>
      <div class="mb-3">
        <label for="nuevaContrasena" class="form-label">Nueva contraseña</label>
        <input type="password" class="form-control" name="nuevaContrasena" id="nuevaContrasena">
      </div>
      <button type="submit" class="btn btn-success">Guardar</button>
    </form>
  </div>

  <!-- Reseñas y Reservas -->
  <div class="row">
    <div class="col-md-7">
      <!-- Reservas -->
      <div class="card-section mb-4">
        <h5 class="section-title">Mis reservaciones</h5>
        <% if (reservasActivas.length > 0) { %>
          <% reservasActivas.forEach(r => { %>
            <div class="hotel-reservation-card mb-3">
              <img src="/images/hotel.jpg" class="img-thumbnail" style="width: 80px; height: 60px;">
              <div class="flex-grow-1">
                <h6><%= r.ciudad %></h6>
                <p class="text-muted small mb-1"><%= r.fechas %></p>
                <span class="badge bg-success">Confirmada</span>
              </div>
              <a href="/reserva/<%= r._id %>" class="btn btn-sm btn-outline-primary">Ver detalles</a>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">No tienes reservas activas.</p>
        <% } %>
      </div>

      <!-- Reseñas -->
      <div class="card-section mb-4">
        <h5 class="section-title">Reseñas</h5>
        <% if (reseñas.length > 0) { %>
          <% reseñas.forEach(r => { %>
            <div class="review-item mb-2">
              <i class="fas fa-check-circle review-icon"></i>
              <div>
                <strong><%= r.titulo || 'Excelente estancia' %></strong>
                <p class="mb-0"><%= r.comentario %></p>
              </div>
              <i class="fas fa-chevron-right ms-auto text-muted"></i>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">No has escrito reseñas.</p>
        <% } %>
      </div>
    </div>

    <!-- Calendario y Facturas -->
    <div class="col-md-5">
      <!-- Calendario -->
      <div class="card-section mb-4">
        <h5 class="section-title">Calendario</h5>
        <div class="calendar-grid text-center">
          <% for (let i = 1; i <= 30; i++) { %>
            <span class="<%= [10, 20, 21, 22, 23].includes(i) ? 'active-date' : '' %>"><%= i %></span>
          <% } %>
        </div>
        <p class="text-muted text-center mt-2">Próximo viaje: 20–23 jun</p>
      </div>

      <!-- Facturas -->
      <div class="card-section mb-4">
        <h5 class="section-title">Facturas</h5>
        <% if (typeof facturas !== 'undefined' && facturas.length > 0) { %>
          <% facturas.forEach(f => { %>
            <div class="invoice-item d-flex justify-content-between align-items-center mb-2">
              <div>
                <p class="mb-0 fw-bold">$<%= f.monto %></p>
                <small><%= f.nombreEstablecimiento %></small>
              </div>
              <button class="btn btn-sm btn-outline-primary"><i class="fas fa-download"></i> Descargar</button>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-muted">No tienes facturas disponibles.</p>
        <% } %>
      </div>
    </div>
  </div>
<!-- Módulo combinado: Actividad reciente y notificaciones -->
<div class="card-section mb-4">
  <h5 class="section-title">Actividad reciente y notificaciones</h5>

  <div class="d-flex flex-column gap-3">

    <!-- Notificación de nueva reserva -->
    <div class="d-flex align-items-start gap-3 p-3 bg-light border rounded shadow-sm">
      <i class="bi bi-calendar-check text-success fs-4"></i>
      <div>
        <p class="mb-1"><strong>Tu reserva en Mazatlán ha sido confirmada</strong></p>
        <small class="text-muted">Hace 2 horas</small>
      </div>
    </div>

    <!-- Notificación de reseña -->
    <div class="d-flex align-items-start gap-3 p-3 bg-light border rounded shadow-sm">
      <i class="bi bi-chat-left-dots text-primary fs-4"></i>
      <div>
        <p class="mb-1"><strong>Gracias por dejar tu reseña en Hotel Azul</strong></p>
        <small class="text-muted">Ayer</small>
      </div>
    </div>

    <!-- Notificación de cancelación -->
    <div class="d-flex align-items-start gap-3 p-3 bg-light border rounded shadow-sm">
      <i class="bi bi-x-circle text-danger fs-4"></i>
      <div>
        <p class="mb-1"><strong>Cancelaste tu estancia en Casa Bonita</strong></p>
        <small class="text-muted">Hace 3 días</small>
      </div>
    </div>

  </div>
</div>

  <!-- Carrusel de Recomendaciones -->
  <div class="card-section mt-4">
    <h5 class="section-title">Recomendaciones</h5>
    <div id="carouselHoteles" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="card d-flex flex-column flex-md-row align-items-center gap-3 p-3 shadow-sm">
            <img src="/images/hotel1.jpg" class="img-thumbnail rounded" style="width: 120px; height: 90px; object-fit: cover;">
            <div class="flex-grow-1">
              <h6 class="fw-bold mb-1">Hotel Paraíso del Sol</h6>
              <p class="mb-1 text-muted small">Frente al mar con piscina y desayuno incluido.</p>
              <button class="btn btn-sm btn-primary">Ver más</button>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="card d-flex flex-column flex-md-row align-items-center gap-3 p-3 shadow-sm">
            <img src="/images/hotel2.jpg" class="img-thumbnail rounded" style="width: 120px; height: 90px; object-fit: cover;">
            <div class="flex-grow-1">
              <h6 class="fw-bold mb-1">Resort Luna Azul</h6>
              <p class="mb-1 text-muted small">Spa, jacuzzi y cenas románticas frente al lago.</p>
              <button class="btn btn-sm btn-primary">Ver más</button>
            </div>
          </div>
        </div>
        <div class="carousel-item">
          <div class="card d-flex flex-column flex-md-row align-items-center gap-3 p-3 shadow-sm">
            <img src="/images/hotel3.jpg" class="img-thumbnail rounded" style="width: 120px; height: 90px; object-fit: cover;">
            <div class="flex-grow-1">
              <h6 class="fw-bold mb-1">Casa Bonita</h6>
              <p class="mb-1 text-muted small">Hotel boutique con vista al mar y playa privada.</p>
              <button class="btn btn-sm btn-primary">Ver más</button>
            </div>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselHoteles" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselHoteles" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
      </button>
    </div>
  </div>
</section>

<script>
  document.getElementById('btnActualizar').addEventListener('click', function () {
    const form = document.getElementById('formActualizar');
    const avatar = document.getElementById('moduloAvatar');

    const visible = form.style.display === 'block';
    form.style.display = visible ? 'none' : 'block';
    avatar.style.display = visible ? 'none' : 'block';
  });
</script>

