<% layout('layout/layout.ejs') %>

<style>
  .card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: none;
    border-left: 5px solid transparent;
    height: 100%;
  }

  .card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  }

  .reservas {
    background-color: #fff5f5 !important;
    border-left-color: #dc3545;
  }

  .usuarios {
    background-color: #f0f7ff !important;
    border-left-color: #0d6efd;
  }

  .habitacion {
    background-color: #f6f0ff !important;
    border-left-color: #6f42c1;
  }

  .hotel {
    background-color: #f0fff5 !important;
    border-left-color: #198754;
  }

  .badge-custom {
    font-size: 0.85rem;
    padding: 0.4em 0.7em;
    margin-top: 10px;
    display: inline-block;
  }

  .icono {
    font-size: 1.3rem;
    margin-right: 8px;
  }
</style>

<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-dark text-white text-center">
      <h3 class="mb-0">Panel de Administración</h3>
    </div>
    <div class="card-body">
      <p class="text-muted mb-4 text-center">Seleccione una opción para gestionar el sistema</p>

      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
          <a href="/admin/reservas-por-hotel" class="card reservas text-decoration-none text-dark p-3">
            <div class="card-body">
              <i class="fas fa-calendar-check icono text-danger"></i>
              <span>Reservas por Hotel</span>
              <div>
                <span class="badge bg-danger rounded-pill badge-custom">Ver</span>
              </div>
            </div>
          </a>
        </div>

        <div class="col">
          <a href="/admin/usuarios-sistema" class="card usuarios text-decoration-none text-dark p-3">
            <div class="card-body">
              <i class="fas fa-user-shield icono text-primary"></i>
              <span>Gestión de Usuarios del Sistema</span>
              <div>
                <span class="badge bg-primary rounded-pill badge-custom">Ver</span>
              </div>
            </div>
          </a>
        </div>

        <div class="col">
          <a href="/admin/lista-habitaciones" class="card habitacion text-decoration-none text-dark p-3">
            <div class="card-body">
              <i class="fas fa-bed icono" style="color: #6f42c1;"></i>
              <span>Gestión de Habitaciones</span>
              <div>
                <span class="badge rounded-pill badge-custom" style="background-color: #6f42c1;">Ver</span>
              </div>
            </div>
          </a>
        </div>

        <div class="col">
          <a href="/admin/nuevo-hotel" class="card hotel text-decoration-none text-dark p-3">
            <div class="card-body">
              <i class="fas fa-building icono text-success"></i>
              <span>Añadir Hotel</span>
              <div>
                <span class="badge bg-success rounded-pill badge-custom">Ver</span>
              </div>
            </div>
          </a>
        </div>

        <div class="col">
          <a href="/admin/reportes" class="card hotel text-decoration-none text-dark p-3">
            <div class="card-body">
              <i class="fas fa-file-alt icono text-success"></i>
              <span>Reportes</span>
              <div>
                <span class="badge bg-success rounded-pill badge-custom">Ver</span>
              </div>
            </div>
          </a>
        </div>

      </div>

    </div>
  </div>
</div>