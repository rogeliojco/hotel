<% layout('layout/layout.ejs') %>
<style>
  .form-group { margin-bottom: 1.5rem; }
  label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #333;
  }
  select, input, textarea {
    width: 100%;
    padding: 10px 12px;
    border: 2px solid #593196;
    border-radius: 8px;
    font-size: 1rem;
    color: #333;
    background-color: #fff;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  select:focus, input:focus, textarea:focus {
    border-color: #593196;
    outline: none;
    box-shadow: 0 0 0 0.2rem rgba(89, 49, 150, 0.25);
  }
  option, optgroup {
    padding: 8px;
    font-size: 0.95rem;
  }
  optgroup {
    font-weight: bold;
    background-color: #f2f2f2;
    color: #593196;
  }
  .preview-images {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
  }
  .preview-images img {
    max-width: 150px;
    max-height: 150px;
    border: 1px solid #ccc;
    border-radius: 6px;
  }
</style>

<div class="container mt-5">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h3 class="mb-0">Añadir Nueva Habitación</h3>
    </div>
    <div class="card-body">
      <form action="/admin/nueva-habitacion" method="POST">
        <div class="mb-3">
          <label for="hotel">Hotel:</label>
          <select name="hotel" id="hotel" required>
            <% for (const estado in hotelesPorEstado) { %>
              <optgroup label="<%= estado %>">
                <% hotelesPorEstado[estado].forEach(hotel => { %>
                  <option value="<%= hotel._id %>"><%= hotel.nombre %></option>
                <% }); %>
              </optgroup>
            <% } %>
          </select>
        </div>

        <div class="mb-3">
          <label for="nombre">Nombre de la habitación</label>
          <input type="text" id="nombre" name="nombre" required>
        </div>

        <div class="mb-3">
          <label for="descripcion">Descripción</label>
          <textarea id="descripcion" name="descripcion" rows="3"></textarea>
        </div>

        <div class="mb-3">
          <label for="tipo">Capacidad de la habitación</label>
          <select id="tipo" name="tipo" required>
            <option value="" disabled selected>Seleccione una opción</option>
            <option value="unaPersona">1 persona</option>
            <option value="dosPersonas">2 personas</option>
            <option value="cuatroPersonas">4 personas</option>
            <option value="seisPersonas">6 personas</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="precio">Precio por noche (MXN)</label>
          <input type="number" id="precio" name="precio" min="0" required>
        </div>

        <div class="mb-3">
          <label for="imagenes">Enlaces de Fotos (uno por línea)</label>
          <textarea id="imagenes" name="imagenes" rows="3" placeholder="https://ejemplo.com/foto1.jpg&#10;https://ejemplo.com/foto2.jpg"></textarea>
          <div id="preview" class="preview-images"></div>
        </div>

        <button type="submit" class="btn btn-success">Guardar Habitación</button>
      </form>
    </div>
  </div>
</div>

<script>
  const fotosTextarea = document.getElementById('imagenes');
  const previewDiv = document.getElementById('preview');

  fotosTextarea.addEventListener('input', () => {
    previewDiv.innerHTML = '';
    const urls = fotosTextarea.value.split('\n').map(url => url.trim()).filter(url => url.startsWith('http'));
    urls.forEach(url => {
      const img = document.createElement('img');
      img.src = url;
      img.alt = 'Imagen previa';
      previewDiv.appendChild(img);
    });
  });
</script>
