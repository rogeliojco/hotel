<% layout('layout/layout.ejs') %>

<style>
  .form-container {
    max-width: 900px;
    margin: 2rem auto;
    background: #fff;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .form-title {
    font-size: 1.8rem;
    font-weight: bold;
    color: #593196;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #333;
    display: block;
  }

  input, select, textarea {
    width: 100%;
    padding: 10px 14px;
    border: 2px solid #ccc;
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  input:focus, select:focus, textarea:focus {
    border-color: #593196;
    box-shadow: 0 0 0 3px rgba(89, 49, 150, 0.2);
    outline: none;
  }

  .form-row {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  .form-col {
    flex: 1;
    min-width: 250px;
  }

  .preview-images {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 10px;
  }

  .preview-images img {
    max-width: 150px;
    max-height: 150px;
    border-radius: 8px;
    border: 2px solid #ccc;
  }

  .checkbox-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 10px;
  }

  .checkbox-grid label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 500;
  }

  .checkbox-inline {
    display: inline-flex;
    align-items: center;
    margin-right: 1rem;
    margin-bottom: 0.5rem;
    gap: 0.3rem;
  }

  .checkbox-inline input[type="checkbox"] {
    margin: 0;
  }

  .submit-btn {
    display: block;
    width: 100%;
    background-color: #593196;
    color: #fff;
    font-weight: bold;
    font-size: 1.1rem;
    padding: 14px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-btn:hover {
    background-color: #45287c;
  }

  hr {
    margin: 2rem 0 1rem;
    border-top: 2px solid #eee;
  }

  .section-title {
    font-size: 1.2rem;
    font-weight: bold;
    color: #444;
    margin-bottom: 1rem;
  }

  fieldset {
    margin-top: 1.5rem;
    padding: 1rem;
    border: 2px solid #ccc;
    border-radius: 8px;
  }

  legend {
    font-weight: bold;
    color: #593196;
  }
</style>

<div class="form-container">
  <h2 class="form-title">âœï¸ Editar HabitaciÃ³n</h2>

  <form action="/admin/editar-habitacion/<%= habitacion._id %>" method="POST">
