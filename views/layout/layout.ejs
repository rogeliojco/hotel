<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%- typeof title !== 'undefined' ? title : 'Mi App' %></title>

  <!-- FontAwesome + Bootstrap -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/perfil.css">
  <link rel="stylesheet" href="/css/perfil-extra.css">

  <%- block('stylesheets') -%>
</head>

<!-- Aplica fondo especial solo si estamos en la vista de perfil -->
<body class="<%= typeof reservasActivas !== 'undefined' ? 'perfil-body' : '' %>">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg" style="background-color: #AAAAAA; padding-top: 0.25rem; padding-bottom: 0.25rem;" data-bs-theme="dark">
    <div class="container position-relative">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarColor01">
        <% if (user) { %>
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-white" href="/perfil">HOTELES</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Salir">PAQUETES HOTEL + AVIÓN</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Salir">OFERTAS</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Salir">DESTINOS</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/perfil">PERFIL</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/">PÁGINA PRINCIPAL</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Salir">SALIR</a></li>
          </ul>
        <% } else { %>
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link text-white" href="/login">INGRESAR</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/registro">REGISTRO</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/">PÁGINA PRINCIPAL</a></li>
          </ul>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-3">
    <% if (mensajeLogin?.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Vaya!</strong> <%= mensajeLogin %> intente nuevamente.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>
    <% if (mensajeRegistro?.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>¡Vaya!</strong> <%= mensajeRegistro %> intente nuevamente.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>
    <% if (successMessage) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>
    <% if (errorMessage) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= errorMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
      </div>
    <% } %>
  </div>

  <!-- Contenido dinámico -->
  <main class="container mt-3 mb-5">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    &copy; <%= new Date().getFullYear() %> Hotel MX - Todos los derechos reservados
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert.show');
      alerts.forEach(alert => {
        alert.classList.remove('show');
        alert.classList.add('hide');
        setTimeout(() => alert.remove(), 600);
      });
    }, 5000);
  </script>

  <%- block('scripts') %>
</body>
</html>
