<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login con Node</title>

    <!-- Bootstrap y estilos personalizados -->
    <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css"> <!-- Asegúrate que está en /public/css/style.css -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #AAAAAA; padding-top: 0.25rem; padding-bottom: 0.25rem;" data-bs-theme="dark">
        <div class="container position-relative">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarColor01">
                <% if (user) { %>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-white" href="/perfil">HOTELES</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Salir">PAQUETES HOTEL + AVION</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Salir">OFERTAS</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Salir">DESTINOS</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/perfil">PERFIL</a></li>                        
                        <li class="nav-item"><a class="nav-link text-white" href="/">PAGINA PRINCIPAL</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/Salir">SALIR</a></li>
                    </ul>
                <% } else { %>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-white" href="/login">INGRESAR</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/registro">REGISTRO</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/">PAGINA PRINCIPAL</a></li>
                        
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Mensajes Flash -->
    <div style="position: fixed; top: 20px; right: 20px; z-index: 1050; width: auto;">
        <% if (mensajeLogin.length > 0) { %>
            <div class="alert alert-dismissible alert-primary alert-fade show" role="alert">
                <strong>¡Vaya!</strong> <%= mensajeLogin %> intente nuevamente.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (mensajeRegistro.length > 0) { %>
            <div class="alert alert-dismissible alert-primary alert-fade show" role="alert">
                <strong>¡Vaya!</strong> <%= mensajeRegistro %> intente nuevamente.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <!-- Aquí va el contenido de cada página -->
    <%- body %>

    <!-- Script para ocultar alertas después de 4 segundos -->
    <script>
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-fade.show');
            alerts.forEach(alert => {
                alert.classList.remove('show');
                alert.classList.add('hide');
                setTimeout(() => alert.remove(), 600);
            });
        }, 4000);
    </script>

</body>
</html>
